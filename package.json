{
  "type": "module",
  "scripts": {
    "start": "npx concurrently \"node --watch ./src/main.js\" \"npx serve dist\"",
    "dev": "npm run start",
    "local": "npm run start",
    "build": "node ./src/main.js",
    "test": "node test/server.test.js",
    "tc": "npx tsc -w",
    "typecheck": "tsc",
    "optimize-images": "node ./src/optimize-images.js",
    "screenshot-work": "node ./src/screenshot-work-websites.js",
    "screenshot-projects": "node ./src/screenshot-project-websites.js",
    "codegen": "npm run screenshot-work && npm run screenshot-projects && npm run optimize-images",
    "preview": "docker build -t portfolio-app . && docker run -p 80:80 portfolio-app"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "playwright": "^1.48.0",
    "typescript": "^5.9.3"
  }
