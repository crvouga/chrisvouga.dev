# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored and should not be committed

# Digital Ocean API token
# Get from: https://cloud.digitalocean.com/account/api/tokens
do_token = "your-digital-ocean-api-token-here"

# SSH key configuration
ssh_key_name        = "chrisvouga-dev-key"
ssh_public_key_path = "~/.ssh/id_rsa.pub"

# Droplet configuration
droplet_name   = "chrisvouga-dev"
droplet_region = "nyc1"  # Options: nyc1, nyc3, sfo3, ams3, sgp1, lon1, fra1, tor1, blr1, etc.
droplet_size   = "s-2vcpu-4gb"  # 2 vCPUs, 4GB RAM, 80GB SSD
droplet_image  = "ubuntu-22-04-x64"

# Enable reserved IP for easier management
enable_reserved_ip = true

# Tags for the droplet
tags = ["chrisvouga-dev", "production"]
